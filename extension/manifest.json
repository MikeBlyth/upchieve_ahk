{
  "manifest_version": 3,
  "name": "UPchieve Student Detector",
  "version": "1.0",
  "description": "Automatically detect waiting students and copy their information for AutoHotkey integration",

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "scripting"
  ],

      "host_permissions": [
        "https://app.upchieve.org/*",
        "http://127.0.0.1:54567/*"
      ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "UPchieve Student Detector"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [{
    "matches": ["https://app.upchieve.org/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}